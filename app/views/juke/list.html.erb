<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">FGSF Music Library</div>
  <div class="panel-body cover-background-color">
    <p>Choose thy song and thy music shall play</p>
  </div>

  <!-- List group -->
  <div class="list-group">
    <% @songs.each do |song| %>
      <button type="button" class="btn_add_song list-group-item text-align-center" \
              name="/juke/add_song?song_name=<%= URI.encode(song.file) %>">
        <span class="glyphicon glyphicon-play" aria-hidden="true"></span> <%= song.file %>
      </button>
    <% end %>
  </div>

  <div class="panel-footer cover-background-color">
    FGSF Media Team -
    <a href="mailto:fgsfmedia@gmail.com?Subject=Hi team!" target="_top">fgsfmedia@gmail.com</a>
  </div>
</div>

