<div style="margin-left:50px;float:left;text-align:left;">
  Last played:<br>
  <% if song = previous_songs(MPD_INSTANCE).last %>
    <%= song.to_h[:title] || song.file %><br>
  <% end %>
</div>
<div style="margin-right:50px;float:right;text-align:right;">
  Coming up:<br>
  <% if song = next_songs(MPD_INSTANCE).first %>
    <%= song.to_h[:title] || song.file %><br>
  <% end %>
</div>
