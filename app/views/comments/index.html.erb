<h3>We appreciate your feedback!</h3>

<%= form_for(@comment) do |f| %>
  <p>
    <%= f.label :작성자 %><br>
    <%= f.text_field :commenter, class: 'input-comment' %>
  </p>
  <p>
    <%= f.label :내용 %><br>
    <%= f.text_area :body, class: 'input-comment' %>
  </p>
  <p>
    <%= f.submit '작성하기', class: 'input-comment btn-primary'%>
  </p>
<% end %>

